<div class="home">
 <h1>{{blog.title}}</h1>
 <h2>{{format_date blog.createdAt}} | Written by {{blog.user.name}}</h2>
 <p>{{blog.content}}</p>
</div>

{{#each blog.comments as |comment|}}
<div class="home">
    <h3>Comment by {{comment.user.name}}</h3>
    <p>{{comment.text}}</p>
    <p>{{format_date comment.createdAt}}</p>
</div>
{{/each}}