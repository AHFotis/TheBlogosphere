<div class="family">

  <div class="home">

    <h1 class="title" style="color:rgba(94, 39, 39, 0.743); font-weight:bold">Update Blog</h1>

    <form class="edit-post-form">

      <div class="post-title-section">
        <label for="post-title" class="update">update title:</label>
        <br>
        <input type="text" name="post-title" id="post-title" value="{{blog.title}}" />
      </div>

      <br>

      <div class="post-content">
        <label for="post-content" class="update">update content:</label>
        <br>
        <textarea class="entry-field" id="post-content" name="post-content">{{blog.content}}</textarea>
      </div>

      <br>

      <button class="upDelBtn" type="submit">Update post</button>
      <br>
      <button type="button" class="delete-post-btn upDelBtn">Delete post</button>

    </form>

  </div>
  
</div>

<script src="/js/update.js"></script>
<script src="/js/delete.js"></script>